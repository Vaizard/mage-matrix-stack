[Unit]
Description=Matrix Mautrix Whatsapp server
After=systemd-networkd.service network.target
Requires=matrix-synapse.service
After=matrix-synapse.service

[Service]
Type=simple
ExecStart={{ ext_appservice_mautrix_whatsapp_base_path }}/mautrix-whatsapp
WorkingDirectory={{ ext_appservice_mautrix_whatsapp_base_path }}
User=matrix-synapse
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
