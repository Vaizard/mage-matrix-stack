{
    "default_hs_url": "https://{{ hostname_server }}:443",
    "default_is_url": "https://vector.im",
    "brand": "Riot",
    "integrations_ui_url": "https://scalar.vector.im/",
    "integrations_rest_url": "https://scalar.vector.im/api",
    "default_federate": false,
    "features": {
        "feature_groups": "labs",
        "feature_pinning": "labs"
    },
    "roomDirectory": {
        "servers": [
            "{{ hostname_server }}"
        ]
    },
    "welcomeUserId": "@riot-bot:{{ hostname_server }}",
{% if piwik_enable %}
    "piwik": {
        "url": "{{ piwik_url }}",
        "whitelistedHSUrls": ["https://{{ hostname_server }}"],
        "whitelistedISUrls": ["https://{{ hostname_webapp }}", "https://{{ hostname_server }}"],
        "siteId": 1
    },
{% endif %}
}

